{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Levelised Cost of Energy Comparison",
    "font": "Inter",
    "fontSize": 18
  },
  "width": 915,
  "height": 600,
  "background": "#eeeeee",
  "padding": 5,
  "data": {
    "url": "../data/levelised_cost_of_energy_comparison.csv"
  },
  "layer": [
    {
      "mark": {
        "type": "rect",
        "fill": "#D3D3D3",
        "fillOpacity": 0.5
      },
      "data": {
        "values": [{"x": "2009", "x2": "2012", "y": 0, "y2": 400}]
      },
      "encoding": {
        "x": {"field": "x", "type": "ordinal"},
        "x2": {"field": "x2"},
        "y": {"field": "y", "type": "quantitative"},
        "y2": {"field": "y2"}
      }
    },
    {
      "data": {
        "values": [{"x": "2010", "y": 250, "annotation": "100,000 solar patents filed during 2009 to 2011 causing a large drop in costs."}]

      },
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 14,
        "font": "Inter",
        "dx": 380, 
        "dy": -150
      },
      "encoding": {
        "x": {
          "field": "x",
          "type": "ordinal"
        },
        "y": {
          "field": "y",
          "type": "quantitative"
        },
        "text": {
          "field": "annotation",
          "type": "ordinal"
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "point": {
          "filled": false,
          "fill": "#fff"
        }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "grid": false,
            "labelAngle": 0,
            "labelFontSize": 16
          }
        },
        "y": {
          "field": "Mean Levelized Cost of Energy",
          "type": "quantitative",
          "title": "Mean Levelized Cost ($/MWh)",
          "axis": {
            "labelFontSize": 16 
          }
        },
        "color": {
          "field": "Energy",
          "type": "nominal",
          "title": "Energy Source",
          "scale": {
            "domain": ["Nuclear", "Gas Peaking", "Solar Thermal", "Coal", "Hydropower", "Gas Combined", "Solar Photovoltaic", "Wind"],
            "range": ["grey", "grey", "grey", "grey", "#6897cf", "grey", "orange", "#002858"]
          },
          "legend": null
        },
        "tooltip": [
          {
            "field": "Energy",
            "type": "nominal",
            "title": "Energy Source"
          },
          {
            "field": "Mean Levelized Cost of Energy",
            "type": "quantitative",
            "title": "Mean Levelized Cost ($/MWh)",
            "format": ",.0f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "dy": -20,
        "dx": 15,
        "fontSize": 15,
        "font": "Inter"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Mean Levelized Cost of Energy",
          "type": "quantitative"
        },
        "text": {
          "field": "Mean Levelized Cost of Energy",
          "type": "quantitative",
          "format": "$,.0f"
        },
        "color": {
          "field": "Energy",
          "type": "nominal",
          "legend": null
        }
      },
      "transform": [
        {
          "filter": "datum.Energy == 'Solar Photovoltaic' || datum.Energy == 'Wind' || datum.Energy == 'Hydropower'"
        }
      ]
    }    
  ],
  "config": {
    "text": {
        "font": "Inter",
        "fontSize": 20
    },
    "axis": {
        "labelFont": "Inter",
        "titleFont": "Inter",
        "titleFontSize": 24 
    },
    "legend": {
        "titleFont": "Inter",
        "labelFont": "Inter",
        "labelFontSize": 24
    },
    "title": {
        "font": "Inter",
        "fontSize": 18
    },
    "view": {
        "stroke": null
    },
    "style": {
        "cell": {
            "stroke": "transparent"
        }
    }
  }
}
