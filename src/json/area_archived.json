{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Annual CO2 Emissions by Region",
    "color": "black",
    "font": "Inter",
    "fontSize": 18,
    "anchor": "middle"
  },
  "width": 1150,
  "height": 500,
  "background": "#eeeeee",
  "data": {
    "url": "https://raw.githubusercontent.com/faw01/FIT3179-Homework-Assessment-Vega-Lite-Interactive/main/Homework%20Assessment%2010/annual-co-emissions-by-region.csv"
  },
  "transform": [
    {
      "filter": "datum.Entity === 'Africa' || datum.Entity === 'Asia' || datum.Entity === 'Europe' || datum.Entity === 'North America' || datum.Entity === 'Oceania' || datum.Entity === 'South America'"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {
            "title": "Year",
            "format": "%Y"
          },
          "scale": {
            "domain": [
              {"year": 1850},
              {"year": 2022}
            ]
          }
        },
        "y": {
          "field": "Annual CO2 emissions",
          "type": "quantitative",
          "axis": {
            "title": "Annual CO2 Emissions (in tonnes)"
          }
        },
        "color": {
          "field": "Entity",
          "type": "nominal",
          "legend": {
            "title": "Region",
            "titleFontSize": 14,
            "labelFontSize": 12
          },
          "scale": {
            "scheme": "tableau10"
          }
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year", "timeUnit": "year"},
          {"field": "Entity", "type": "nominal", "title": "Region"},
          {"field": "Annual CO2 emissions", "type": "quantitative", "title": "Annual CO2 Emissions (tonnes)", "format": ",.0f"}
        ]
      },
      "selection": {
        "RegionSelect": {
          "type": "multi",
          "fields": ["Entity"],
          "bind": "legend",
          "init": {"Entity": ["North America", "South America", "Europe", "Asia", "Africa", "Oceania"]}
        }
      },
      "transform": [
        {
          "filter": {
            "selection": "RegionSelect"
          }
        }
      ]
    },
    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeDash": [4, 4]
      },
      "encoding": {
        "x": {
          "datum": {"year": 1947},
          "type": "temporal"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "font": "Inter",
        "fontSize": 18,
        "align": "left",
        "baseline": "middle",
        "dx": -375,
        "dy": -250
      },
      "encoding": {
        "x": {
          "datum": {"year": 1947},
          "type": "temporal"
        },
        "y": {
          "datum": 450,
          "type": "quantitative"
        },
        "text": {
          "value": "1947 - Start of the Third Industrial Revolution"
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeDash": [4, 4]
      },
      "encoding": {
        "x": {
          "datum": {"year": 2016},
          "type": "temporal"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "font": "Inter",
        "fontSize": 18,
        "align": "left",
        "baseline": "middle",
        "dx": -255,
        "dy": -250
      },
      "encoding": {
        "x": {
          "datum": {"year": 2016},
          "type": "temporal"
        },
        "y": {
          "datum": 450,
          "type": "quantitative"
        },
        "text": {
          "value": "2016 - Paris Agreement Signed"
        }
      }
    }
  ],
  "config": {
    "text": {
      "font": "Inter"
    },
    "axis": {
      "labelFont": "Inter",
      "titleFont": "Inter",
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "legend": {
      "titleFont": "Inter",
      "labelFont": "Inter",
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "title": {
      "font": "Inter"
    },
    "view": {
      "stroke": "transparent"
    }
  }
}
