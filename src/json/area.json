{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Renewable Energy Production Over Time",
    "font": "Inter",
    "fontSize": 18,
    "color": "black",
    "anchor": "middle"
  },
  "vconcat": [
    {
      "width": 600,
      "height": 400,
      "mark": "area",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {
            "title": "Year",
            "labelFont": "Inter",
            "labelFontSize": 12,
            "titleFont": "Inter",
            "titleFontSize": 14
          },
          "scale": {
            "domain": {"param": "brush"}
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "value",
          "axis": {
            "title": "Production (in TWh)",
            "labelFont": "Inter",
            "labelFontSize": 12,
            "titleFont": "Inter",
            "titleFontSize": 14
          }
        },
        "color": {
          "field": "source",
          "scale": {
            "domain": ["Hydropower", "Solar", "Wind", "Other Renewables"],
            "range": ["#6897cf", "orange", "#4c698c", "#89a67c"]
          },
          "legend": {
            "title": "Energy Source",
            "labelFont": "Inter",
            "labelFontSize": 12,
            "titleFont": "Inter",
            "titleFontSize": 14
          }
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "value", "type": "quantitative", "title": "Production (TWh)", "format": ".2f"},
          {"field": "source", "type": "nominal", "title": "Energy Source"}
        ]
      },
      "transform": [
        {
          "fold": ["Solar", "Wind", "Hydropower", "Other Renewables"],
          "as": ["source", "value"]
        }
      ]
    },
    {
      "width": 600,
      "height": 60,
      "mark": "area",
      "params": [
        {
          "name": "brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {
          "aggregate": "sum",
          "field": "value",
          "axis": {"tickCount": 3, "grid": false, "title": ""}
        },
        "color": {
          "field": "source",
          "scale": {
            "domain": ["Hydropower", "Solar", "Wind", "Other Renewables"],
            "range": ["#6897cf", "orange", "#4c698c", "#89a67c"]
          }
        }
      },
      "transform": [
        {
          "fold": ["Solar", "Wind", "Hydropower", "Other Renewables"],
          "as": ["source", "value"]
        }
      ]
    }
  ],
  "data": {
    "url": "../data/renewable-energy.csv",
    "format": {"type": "csv"}
  },
  "background": "#eeeeee",
  "config": {
    "view": {"stroke": null},
    "axis": {"domainColor": "#ddd"},
    "background": "#eeeeee"
  }
}
