{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Renewable Energy Production Over Time",
    "font": "Inter",
    "fontSize": 18,
    "color": "black",
    "anchor": "middle"
  },
  "width": 600,
  "height": 500,
  "data": {
    "url": "../data/renewable-energy.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": "area",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {
            "title": "Year",
            "labelFont": "Inter",
            "labelFontSize": 16,
            "titleFont": "Inter",
            "titleFontSize": 18,
            "labelExpr": "datum.value % 5 === 0 ? datum.value : ''",
            "labelAngle": 0
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "value",
          "axis": {
            "title": "Production (in TWh)",
            "labelFont": "Inter",
            "labelFontSize": 16,
            "titleFont": "Inter",
            "titleFontSize": 18
          }
        },
        "color": {
          "field": "source",
          "scale": {
            "domain": ["Hydropower", "Solar", "Wind", "Other Renewables"],
            "range": ["#6897cf", "orange", "#002858", "#89a67c"]
          },
          "legend": {
            "title": "Energy Source",
            "labelFont": "Inter",
            "labelFontSize": 16,
            "titleFont": "Inter",
            "titleFontSize": 18
          },
          "sort": ["Hydropower", "Solar", "Wind", "Other Renewables"]
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "value", "type": "quantitative", "title": "Production (TWh)", "format": ",.0f"},
          {"field": "source", "type": "nominal", "title": "Energy Source"}
        ]
      }
    },
    {
      "mark": {
        "type": "rect",
        "fill": "#D3D3D3",
        "fillOpacity": 0.5
      },
      "data": {
        "values": [{"x": "2017", "x2": "2018", "y": 0, "y2": 8000}]
      },
      "encoding": {
        "x": {"field": "x", "type": "ordinal"},
        "x2": {"field": "x2"},
        "y": {"field": "y", "type": "quantitative"},
        "y2": {"field": "y2"}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 14,
        "dx": -60, 
        "dy": -100,
        "align": "center",
        "baseline": "middle"
      },
      "data": {
        "values": [{"x": "2017", "y": 4000, "annotation": "Solar takeover"}]
      },
      "encoding": {
        "x": {"field": "x", "type": "ordinal"},
        "y": {"field": "y", "type": "quantitative"},
        "text": {"field": "annotation", "type": "ordinal"}
      }
    }
  ],
  "transform": [
    {
      "fold": ["Hydropower", "Solar", "Wind", "Other Renewables"],
      "as": ["source", "value"]
    }
  ],
  "background": "#eeeeee",
  "config": {
    "view": {"stroke": null},
    "axis": {"domainColor": "#ddd"},
    "background": "#eeeeee"
  }
}
