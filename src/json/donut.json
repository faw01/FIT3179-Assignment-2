{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Energy Source Distribution",
    "color": "black",
    "font": "Inter",
    "fontSize": 18,
    "anchor": "middle"
  },
  "description": "A donut chart showing the distribution of energy sources for a selected year.",
  "data": {
    "url": "../data/global-energy-substitution-modified.csv"
  },
  "width": 400,
  "height": 565,
  "background": "#eeeeee",
  "params": [
    {
      "name": "selectedYear",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 1965,
        "max": 2022,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 100,
    "stroke": "#696969",
    "strokeWidth": 2
  },
  "encoding": {
    "theta": {
      "field": "value",
      "type": "quantitative"
    },
    "color": {
      "field": "Energy Source",
      "type": "nominal",
      "scale": {
        "domain": ["Hydropower", "Solar", "Wind", "Gas", "Oil", "Coal", "Biomass", "Other renewables"],
        "range": ["#6897cf", "orange", "#002858", "#b0b0b0", "#989898", "#7a7a7a", "#383838", "#89a67c"]
      },
      "legend": {
        "title": "Energy Source",
        "labelFont": "Inter",
        "labelFontSize": 16,
        "titleFont": "Inter",
        "titleFontSize": 18,
        "symbolStrokeWidth": 0
      }
    },
    "tooltip": [
      {
        "field": "Energy Source",
        "type": "nominal"
      },
      {
        "field": "value",
        "type": "quantitative",
        "title": "Value (TWh)",
        "format": ",.0f"
      }
    ]
  },
  "transform": [
    {
      "filter": "datum.Year == selectedYear"
    },
    {
      "fold": ["Hydropower", "Solar", "Wind", "Gas", "Oil", "Coal", "Biomass", "Other renewables"],
      "as": ["Energy Source", "value"]
    }
  ],
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "domainColor": "#ddd",
      "labelFont": "Inter",
      "labelFontSize": 16,
      "titleFont": "Inter",
      "titleFontSize": 18
    },
    "background": "#f3f3f3",
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}
